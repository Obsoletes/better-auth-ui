{
  "extends": "./tsconfig.json",
  "include": [
    "server.js",
    "vite.config.ts",
    "lib/**/*",
    "server/**/*",
    "generated/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "types": ["node"],
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": "."
  }
}
